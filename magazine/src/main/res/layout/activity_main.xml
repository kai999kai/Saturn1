<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:screenOrientation="portrait"
	tools:context=".MainActivity">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/white"
		android:gravity="bottom|center"
		android:orientation="vertical">

		<ImageView
			android:id="@+id/imageView"
			android:layout_width="match_parent"
			android:layout_height="120dp"
			android:contentDescription="@string/serviceCenter"
			android:onClick="onClickAlertDialog"
			app:srcCompat="@mipmap/main_saturn_tv"
			tools:layout_editor_absoluteY="464dp" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/linearLayout5"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@android:color/holo_red_light"
		android:gravity="center"
		android:orientation="horizontal"
		app:layout_constraintTop_toTopOf="parent"
		android:baselineAligned="false">

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"

			android:layout_weight="1"
			android:orientation="vertical">

			<ImageButton
				android:id="@+id/cloth"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				
				android:backgroundTint="@color/blue"
				android:contentDescription="@string/cloth"
				android:onClick="onClickContextMenu"
				app:srcCompat="@mipmap/main_cloth" />

			<ImageButton
				android:id="@+id/kitchen"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"

				android:backgroundTint="@color/blue"
				android:contentDescription="@string/kitchen"
				android:onClick="onClickContextMenu"
				app:srcCompat="@mipmap/main_kitchen" />

			<ImageButton
				android:id="@+id/house"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"

				android:backgroundTint="@color/blue"
				android:contentDescription="@string/house"
				android:onClick="onClickContextMenu"
				app:srcCompat="@mipmap/main_house" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"

			android:layout_weight="1"
			android:orientation="vertical">

			<ImageButton
				android:id="@+id/android"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"

				android:backgroundTint="@color/blue"
				android:contentDescription="@string/android"
				android:onClick="onClickContextMenu"
				app:srcCompat="@mipmap/main_android" />

			<ImageButton
				android:id="@+id/multimedia"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"

				android:backgroundTint="@color/blue"
				android:contentDescription="@string/multimedia"
				android:onClick="onClickContextMenu"
				app:srcCompat="@mipmap/main_tv" />

			<ImageButton
				android:id="@+id/washer"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"

				android:backgroundTint="@color/blue"
				android:contentDescription="@string/washer"
				android:onClick="onClickContextMenu"
				app:srcCompat="@mipmap/main_washer" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"

			android:layout_weight="1"
			android:orientation="vertical"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent">

			<ImageButton
				android:id="@+id/cold"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"

				android:backgroundTint="@color/blue"
				android:contentDescription="@string/cold"
				android:onClick="onClickContextMenu"
				app:srcCompat="@mipmap/main_cold" />

			<ImageButton
				android:id="@+id/climate"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"

				android:backgroundTint="@color/blue"
				android:contentDescription="@string/climate"
				android:onClick="onClickContextMenu"
				app:srcCompat="@mipmap/main_climate" />

			<ImageButton
				android:id="@+id/beauty"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"

				android:backgroundTint="@color/blue"
				android:contentDescription="@string/beauty"
				android:onClick="onClickContextMenu"
				app:srcCompat="@mipmap/main_beauty" />
		</LinearLayout>
	</LinearLayout>

</android.support.constraint.ConstraintLayout>